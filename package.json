	"devDependencies": {
		"@testing-library/jest-dom": "^5.11.4",
		"@testing-library/react": "^11.1.0",
		"@testing-library/user-event": "^12.1.10",
		"@types/jest": "^26.0.15",
		"@types/node": "^14",
		"@types/react": "^16.9.53",
		"@types/react-dom": "^16.9.8",
		"eslint-config-google": "0.14.0",
		"eslint-config-prettier": "6.12.0",
		"prettier": "2.1.2",
		"source-map-support": "0.5.19",
		"tslib": "2.0.1",
		"typescript": "^4.0.3"
	},
	"dependencies": {
		"@aws-amplify/ui-react": "^0.2.27",
		"amazon-cognito-identity-js": "^4.5.3",
		"aws-amplify": "^3.3.7",
		"aws-amplify-react": "^4.2.11",
		"bootstrap": "^4.5.3",
		"history": "^5.0.0",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-hook-form": "^6.11.0",
		"react-scripts": "4.0.0",
		"react-use": "^15.3.4",
		"source-map-explorer": "^2.5.0",
		"web-vitals": "^0.2.4"
	},
	"scripts": {
		"analyze": "source-map-explorer 'build/static/js/*.js'",
		"preanalyze": "yarn run build",
		"start": "doppler run -c dev -- react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest",
			"google",
			"prettier"
		],
		"rules": {
			"comma-dangle": [
				"error",
				"never"
			],
			"semi": [
				"error",
				"never"
			],
			"no-multi-assign": "error",
			"no-console": "warn",
			"quotes": [
				"error",
				"double"
			],
			"no-unused-vars": "off",
			"new-cap": "off",
			"no-tabs": "off",
			"valid-jsdoc": "off",
			"require-jsdoc": "off",
			"camelcase": "off"
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
